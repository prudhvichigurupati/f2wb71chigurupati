extends layout

block content
  h1= title
  p always be good
  button(type="button",onclick="doBump()" class="btn btn-success") Press Me
  div(id="bump") Bump the count
  script.
    var count=0;
    var bump=1;
    function doBump() {
      count = count+bump;
      bump++;
      document.getElementById("bump").innerHTML=`Count ${count} with bump ${bump}`
      }

